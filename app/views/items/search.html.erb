<h1>商品一覧</h1>
<%if @results.length !=0 %>
  <% @results.each do |result| %>
  <td>
  <br>
    <%= link_to shop_item_path(result.shop.id, result.id), method: :get do %>
    <li>
      <%= image_tag result.image.variant(resize: '400x400') %>
      <%= result.name %>
      <%= result.shop.name %>
      <%= result.price %>
    </li>
    <% end %>
  <% end %>
<% else %>
  該当する商品はありません
<% end %>