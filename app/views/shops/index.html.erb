<%= render "shared/header" %>

<div class='top-title'>
  <%= link_to 'KGY -KaGuYa-', root_path, class: 'title' %>
</div>

<div class='top-main'>
  <%= image_tag 'desk_5.jpeg', alt: 'Desk画像', class: 'left_one_top' %>

  <%= image_tag 'flower_vase_1.jpeg', alt: 'Flower Vase画像', class: 'left_two_top' %>

  <%= image_tag 'sofa_1.jpeg', alt: 'Sofa画像', class: 'left_bottom' %>

  <%= image_tag 'chair_2.jpeg', alt: 'Chair画像', class: 'right-top' %>

  <%= image_tag 'bed_13.jpeg', alt: 'Bed画像', class: 'right-bottom' %>

  <div class='top-info'>
    <div class='top-search' id='top-page-search'>
    商品検索
    </div>
    <%= render "shared/top_search" %>

    <div class='top-shop' id='shops'>
    shop一覧
    </div>
    <ul class='shop-list hidden' id='shop-list'>
    <% if @shops.present? %>
      <% @shops.each do |shop| %>
        <li>
          <%= link_to shop.name, shop_items_path(shop.id) %>
        </li>
      <% end %>
    <% else %>
      shopを登録してください
    <% end %>
    </ul>
  </div>
</div>