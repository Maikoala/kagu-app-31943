<div class='form-background user-login-back'>
  <%= render "shared/title_header" %>

  <%= form_with model:@user, url:user_session_path, class: 'form-main', local: true do |f| %>
  <div class='form'>
    <div class='user-login-background'>
      <div class='form-header'>
        <h2 class='form-title'>ユーザー ログイン</h2>
      </div>

      <div class='flash-login'>
        <%= flash[:alert] %>
      </div>

      <div class='form-group'>
        <div class='form-text-group'>
          <label class='form-text'>メールアドレス</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.email_field :email, placeholder: "PC・携帯どちらでも可", class: 'input-default',autofocus: true %>
      </div>
      <div class='form-group'>
        <div class='form-text-group'>
          <label class='form-text'>パスワード</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password, class: 'input-default', placeholder: "" %>
      </div>
      <div class="form-button">
        <%= f.submit "ログイン", class: 'submit-button user-login-btn' %>
      </div>
    </div>
  </div>
  <% end %>

  <%= render "shared/footer" %>
</div>