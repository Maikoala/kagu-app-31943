<h2>オーナー登録</h2>

<%= form_with model: @owner, url: owner_registration_path, local: true do |f| %>
  <%= render "owners/shared/error_messages", resource: resource %>

  <div class="field">
    <div>
      <label>アカウントネーム</label>
      <span>必須</span>
    </div>
    <%= f.text_area :account_name, placeholder:"例）Kagu太 " %>
  </div>
  <div class="field">
    <div>
      <label>メールアドレス</label>
      <span>必須</span>
    </div>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="field">
    <div>
      <label>パスワード</label>
      <span>必須</span>
    </div>
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
    <p>※英字、数字、どちらも必要です</p>
  </div>
  <div class="field">
    <div>
      <label>パスワード(確認用)</label>
      <span>必須</span>
    </div>
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力" %>
  </div>

  <h3>オーナー情報登録</h3>

  <div>
    <div>
      <label>お名前(全角)</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.text_area :first_name, placeholder:"例) 佐藤" %>
      <%= f.text_area :last_name, placeholder:"例) かぐ太" %>
    </div>
  </div>
  <div>
    <div>
      <label>お名前カナ(全角)</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.text_area :first_name_kana, placeholder:"例) サトウ" %>
      <%= f.text_area :last_name_kana, placeholder:"例) カグタ" %>
    </div>
  </div>
  <div>
    <div>
      <label>郵便番号</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.text_field :postal_code, placeholder:"例) 123-4567" %>
    </div>
  </div>
  <div>
    <div>
      <label>都道府県</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.collection_select(:state_province_id, StateProvince.all, :id, :name, {}, {}) %>
    </div>
  </div>
  <div>
    <div>
      <label>市区町村</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.text_field :city, placeholder:"例) 札幌市中央区" %>
    </div>
  </div>
  <div>
    <div>
      <label>番地</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.text_field :address_line_1, placeholder:"例) 南1-2-3" %>
    </div>
  </div>
  <div>
    <div>
      <label>建物名</label>
      <span>任意</span>
    </div>
    <div>
      <%= f.text_field :address_line_2, placeholder:"例) 北斗ビル202" %>
    </div>
  </div>  
  <div>
    <div>
      <label>電話番号</label>
      <span>必須</span>
    </div>
    <div>
      <%= f.text_field :phone_number, placeholder:"例) 08011112222", maxlength:"11" %>
    </div>
  </div>
<div>
    <div>
      <label>生年月日</label>
      <span>必須</span>
    </div>
    <div>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 10),
                    date_separator: '%s'),
                  "年", "月") + "日" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
