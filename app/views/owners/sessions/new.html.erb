<div class='form-background owner-login-back'>
  <%= render "shared/title_header" %>

  <%= form_with model:@owner, url:owner_session_path, class: 'form-main', local: true do |f| %>
  <div class='form owner-login'>
    <div class='owner-login-background'>
      <div class='form-header'>
        <h2 class='form-title'>オーナー ログイン</h2>
      </div>

      <%= render "shared/error_messages", model: f.object %>

      <div class='form-group'>
        <div class='form-text-group'>
          <label class='form-text'>メールアドレス</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.email_field :email, placeholder: "PC・携帯どちらでも可", class: 'input-default',autofocus: true %>
      </div>
      <div class='form-group'>
        <div class='form-text-group'>
          <label class='form-text'>パスワード</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password, class: 'input-default', placeholder: "" %>
      </div>
      <div class="form-button">
        <%= f.submit "ログイン", class: 'submit-button owner-login-btn' %>
      </div>
    </div>
  </div>
  <% end %>

  <%= render "shared/footer" %>
</div>